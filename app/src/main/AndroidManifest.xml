<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pharmacystorage">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PharmacyStorage"
        tools:targetApi="31">
        <activity
            android:name=".activities.CheckSupplyActivity"
            android:exported="false" />
        <activity
            android:name=".activities.GetSupplyActivity"
            android:exported="false" />
        <activity
            android:name=".activities.RequestActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CreateRequestActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ClientActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CreateClientActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MedicineActivity"
            android:exported="false" />
        <activity
            android:name=".activities.CreateManufacturerActivity"
            android:exported="true" />
        <activity
            android:name=".activities.ManufacturerActivity"
            android:exported="true" />
        <activity
            android:name=".activities.MainMenuActivity"
            android:exported="true" />
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EnterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>